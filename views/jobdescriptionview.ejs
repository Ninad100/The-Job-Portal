
<div id="job-desc-view">
<h1><%=job.role%><span>Opportunity in </span> <%=job.location%> <span>at </span> <%=job.company%></h1>

<div>
    <p><%=job.company%></p>
    <p>Tech <%=job.role%></p>
    <ul type="none">
        <li><%=job.location%></li>
        <li><%=job.salary%></li>
        <li><%=job.location%></li>
        <li>Apply By <%=job.deadline%></li>
        <li>No. of Openings: <%=job.openings%></li>
        <li>Applicants <a href="/" style="text-decoration: none;"><%=job.applications%></a></li>

        <% job.skills.forEach((skill)=>{%>
            <button style="margin-top: 1%;"><%=skill%></button>
        <% }) %>
        <a><button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
            Apply Now
          </button>
        </a>
          
          <!-- Modal -->
          <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <h1 class="modal-title fs-5" id="exampleModalLabel">easily</h1>
                  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                <div>
                    <p>apply in less than 1 minute</p>
                    <form action="/jobs/<%=job.id%>" method="post" enctype="multipart/form-data">
                        <div class="input-group input-group-sm mb-3">
                            <span class="input-group-text" id="inputGroup-sizing-sm">Name</span>
                            <input type="text" name="name" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm">
                          </div>
                        <div class="input-group input-group-sm mb-3">
                            <span class="input-group-text" id="inputGroup-sizing-sm">Email</span>
                            <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                        </div>
                        <div class="input-group input-group-sm mb-3">
                            <span class="input-group-text" id="inputGroup-sizing-sm">Contact</span>
                            <input type="text" class="form-control" aria-label="Sizing example input" aria-describedby="inputGroup-sizing-sm" placeholder="+91__________">
                          </div>
                          <div class="input-group mb-3">
                            <button class="btn btn-outline-secondary" type="button" id="inputGroupFileAddon03">Resume</button>
                            <input type="file" name="file" class="form-control" id="inputGroupFile03" aria-describedby="inputGroupFileAddon03" aria-label="Upload">
                          </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                      </form>
                </div>
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                  <button type="button" class="btn btn-primary">Save changes</button>
                </div>
              </div>
            </div>
          </div>

    </ul>
    <div>
        Posted on: <%= job.datePosted %>
    </div>
</div>

</div>